<?xml version='1.0' encoding='utf-8'?>
<widget id="com.recentsky.test" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Recentsky</name>
    <description>
         Tools for make things more good.
    </description>
    <author email="support@recentsky.com" href="https://www.recentsky.com">
        Recentsky Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <gap:plugin name="cordova-plugin-whitelist" source="npm" />
    <gap:plugin name="cordova-plugin-splashscreen" source="npm" />
	
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
	
   <icon src = "res/icon/android/ldpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "ldpi" />
		
   <icon src = "res/icon/android/mdpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "mdpi" />
		
   <icon src = "res/icon/android/hdpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "hdpi" />
		
   <icon src = "res/icon/android/xhdpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "xhdpi" />
		
   <icon src = "res/icon/android/xxhdpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "xxhdpi" />
  
   <icon src = "res/icon/android/xxxhdpi/ic_launcher.png" 
      gap:platform = "android" gap:qualifier = "xxxhdpi" />

    <platform name="ios">
	 <icon src="res/icon/ios/Icon-App-20x20@1x.png" width="20" height="20" />
	 <icon src="res/icon/ios/Icon-App-20x20@2x.png" width="40" height="40" />
	 <icon src="res/icon/ios/Icon-App-20x20@3x.png" width="60" height="60" />
	    
	 <icon src="res/icon/ios/Icon-App-29x29@1x.png" width="29" height="29" />
	 <icon src="res/icon/ios/Icon-App-29x29@2x.png" width="58" height="58" />
	 <icon src="res/icon/ios/Icon-App-29x29@3x.png" width="87" height="87" />
	   
         <icon src="res/icon/ios/Icon-App-60x60@3x.png" width="180" height="180" />
	 <icon src="res/icon/ios/Icon-App-83.5x83.5@2x.png" width="167" height="167" />
        <!-- iOS 7.0+ -->
        <!-- iPhone / iPod Touch  -->
        <icon src="res/icon/ios/Icon-App-60x60@3x.png" width="60" height="60" />
        <icon src="res/icon/ios/Icon-App-60x60@2x.png" width="120" height="120" />
        <!-- iPad -->
        <icon src="res/icon/ios/Icon-App-76x76@1x.png" width="76" height="76" />
        <icon src="res/icon/ios/Icon-App-76x76@2x.png" width="152" height="152" />
        <!-- Spotlight Icon -->
        <icon src="res/icon/ios/Icon-App-40x40@1x.png" width="40" height="40" />
        <icon src="res/icon/ios/Icon-App-40x40@2x.png" width="80" height="80" />
    </platform>
	
   <platform name="android">
    <!-- you can use any density that exists in the Android project -->
    <splash src="res/screen/android/splash-port-hdpi.png" density="port-hdpi"/>
    <splash src="res/screen/android/splash-port-ldpi.png" density="port-ldpi"/>
    <splash src="res/screen/android/splash-port-mdpi.png" density="port-mdpi"/>
    <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    <splash src="res/screen/android/splash-port-xhdpi.png" density="port-xhdpi"/>
    <splash src="res/screen/android/splash-port-xxhdpi.png" density="port-xxhdpi"/>
    <splash src="res/screen/android/splash-port-xxxhdpi.png" density="port-xxxhdpi"/>
   </platform>
	
   <platform name="ios">
  
    <!-- Storyboard method (supports all devices):
      -- Important: If you use the storyboard method, legacy images are 
      -- copied but ignored.
      -- Note: images are determined by scale, idiom, and size traits. The following
      -- are suggested based on current device form factors -->
    <splash src="res/screen/ios/Default@2x~ipad~anyany.png" />
    <splash src="res/screen/ios/Default@2x~ipad~comany.png" />
    <splash src="res/screen/ios/Default@2x~iphone~anyany.png" />
    <splash src="res/screen/ios/Default@2x~iphone~comany.png" />
    <splash src="res/screen/ios/Default@3x~iphone~anyany.png" />
    <splash src="res/screen/ios/Default@3x~iphone~comany.png" />
  </platform>
	
	
</widget>


<?xml version='1.0' encoding='utf-8'?>
<widget id="com.recentsky.test" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Recentsky</name>
    <description>
         Tools for make things more good.
    </description>
    <author email="support@recentsky.com" href="https://www.recentsky.com">
        Recentsky Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <gap:plugin name="cordova-plugin-whitelist" version="1.3.4" source="npm" />
    
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <preference name="SplashScreen" value="splash" />
    <icon gap:platform="android" gap:qualifier="ldpi" src="res/icon/android/ldpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="mdpi" src="res/icon/android/mdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="hdpi" src="res/icon/android/hdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xhdpi" src="res/icon/android/xhdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xxhdpi" src="res/icon/android/xxhdpi/ic_launcher.png" />
    <icon gap:platform="android" gap:qualifier="xxxhdpi" src="res/icon/android/xxxhdpi/ic_launcher.png" />
    <platform name="ios">
        <icon height="20" src="res/icon/ios/Icon-App-20x20@1x.png" width="20" />
        <icon height="40" src="res/icon/ios/Icon-App-20x20@2x.png" width="40" />
        <icon height="60" src="res/icon/ios/Icon-App-20x20@3x.png" width="60" />
        <icon height="29" src="res/icon/ios/Icon-App-29x29@1x.png" width="29" />
        <icon height="58" src="res/icon/ios/Icon-App-29x29@2x.png" width="58" />
        <icon height="87" src="res/icon/ios/Icon-App-29x29@3x.png" width="87" />
        <icon height="180" src="res/icon/ios/Icon-App-60x60@3x.png" width="180" />
        <icon height="167" src="res/icon/ios/Icon-App-83.5x83.5@2x.png" width="167" />
        <icon height="60" src="res/icon/ios/Icon-App-60x60@3x.png" width="60" />
        <icon height="120" src="res/icon/ios/Icon-App-60x60@2x.png" width="120" />
        <icon height="76" src="res/icon/ios/Icon-App-76x76@1x.png" width="76" />
        <icon height="152" src="res/icon/ios/Icon-App-76x76@2x.png" width="152" />
        <icon height="40" src="res/icon/ios/Icon-App-40x40@1x.png" width="40" />
        <icon height="80" src="res/icon/ios/Icon-App-40x40@2x.png" width="80" />
    </platform>
    <platform name="android">
        <preference name="SplashScreen" value="splash" />
        <preference name="SplashScreenBackgroundColor" value="#3f51b5" />
        <preference name="AutoHideSplashScreen" value="true" />
        <splash src="res/splash.png" />
        <splash density="port-hdpi" src="res/screen/android/splash-port-hdpi.png" />
        <splash density="port-ldpi" src="res/screen/android/splash-port-ldpi.png" />
        <splash density="port-mdpi" src="res/screen/android/splash-port-mdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xhdpi" src="res/screen/android/splash-port-xhdpi.png" />
        <splash density="port-xxhdpi" src="res/screen/android/splash-port-xxhdpi.png" />
        <splash density="port-xxxhdpi" src="res/screen/android/splash-port-xxxhdpi.png" />
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="~5.0.3" />
</widget>
